<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rallyscouts.justtrailit.activity.RegistarNota">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/id_InserirTexto"
        android:autoText="false"
        android:hint="Introduza aqui o seu texto"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registar Voz"
        android:id="@+id/button_RegistarVoz"
        android:clickable="true"
        android:focusable="true"
        android:onClick="registarVoz"
        android:layout_below="@+id/id_InserirTexto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registar Imagem"
        android:id="@+id/button_RegistarImagem"
        android:clickable="true"
        android:focusable="true"
        android:onClick="registarImagem"
        android:layout_below="@+id/button_RegistarVoz"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar submissÃ£o nota "
        android:id="@+id/button_SubmissaoNota"
        android:onClick="confirmarSubmissao"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Analisar nota"
        android:id="@+id/buttonAnalisarNota"
        android:layout_below="@+id/button_RegistarImagem"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_RegistarImagem"
        android:layout_alignEnd="@+id/button_RegistarImagem" />

</RelativeLayout>
