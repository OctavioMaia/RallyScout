<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rallyscouts.justtrailit.activity.Atividade"
    android:clickable="true"
    android:touchscreenBlocksFocus="false"
    android:visibility="visible">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Percurso"
        android:id="@+id/button_VerPercurso"
        android:clickable="true"
        android:focusable="true"
        android:layout_below="@+id/id_Equipa"
        android:onClick="verPercurso"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Registar Nota"
        android:id="@+id/button_RegistarNota"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignTop="@+id/button_VerPercurso"
        android:layout_marginTop="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="registarNota"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Ver Notas"
        android:id="@+id/button_VerNotas"
        android:clickable="true"
        android:focusable="true"
        android:layout_below="@+id/button_RegistarNota"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="verNotas"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_alignBottom="@+id/nAtividade"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Atividade"
        android:id="@+id/nAtividade"
        android:textSize="35dp"
        android:layout_below="@+id/searchView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchView"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button_RegistarNota"
        android:layout_alignStart="@+id/button_RegistarNota" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Equipa:"
        android:id="@+id/id_Equipa"
        android:layout_below="@+id/view"
        android:layout_alignLeft="@+id/button_VerPercurso"
        android:layout_alignStart="@+id/button_VerPercurso"
        android:layout_marginTop="31dp"
        android:textSize="20dp"
        android:layout_alignRight="@+id/nAtividade"
        android:layout_alignEnd="@+id/nAtividade" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Veiculo:"
        android:id="@+id/id_Veiculo"
        android:layout_below="@+id/view"
        android:textSize="20dp"
        android:layout_marginTop="31dp"
        android:layout_alignRight="@+id/button_VerPercurso"
        android:layout_above="@+id/button_RegistarNota"
        android:layout_toRightOf="@+id/id_Equipa"
        android:layout_toEndOf="@+id/id_Equipa" />

</RelativeLayout>
